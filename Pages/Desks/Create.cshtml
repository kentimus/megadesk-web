@page
@model MegaDeskWebWeek8.Pages.Desks.CreateModel

@{
    ViewData["Title"] = "Create a New Desk Quote";
}

<h1>Create a new Desk Quote</h1>

<hr />



<form method="post">
    <div class="row">




        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Width" class="form-control" />
                <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.NumDrawers" class="control-label"></label>
                <select asp-for="DeskQuote.NumDrawers" class="form-control">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
                <span asp-validation-for="DeskQuote.NumDrawers" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="DeskQuote.rushDays" class="control-label"></label>
                <select asp-for="DeskQuote.rushDays" class="form-control">
                    <option value="14">14 days (standard)</option>
                    <option value="7">7 days</option>
                    <option value="5">5 days</option>
                    <option value="3">3 days</option>
                </select>
                <span asp-validation-for="DeskQuote.rushDays" class="text-danger"></span>
            </div>
            <div class="form-group" id="details-material" data-materials-type="Oak">
                <label asp-for="DeskQuote.SurfaceMaterial" class="control-label"></label>
                <select asp-for="DeskQuote.SurfaceMaterial" class="form-control" id="select-material">
                    <option></option>
                    <option value="Oak">Oak</option>
                    <option value="Laminate">Laminate</option>
                    <option value="Pine">Pine</option>
                    <option value="Rosewood">Rosewood</option>
                    <option value="Veneer">Veneer</option>
                </select>
                <span asp-validation-for="DeskQuote.SurfaceMaterial" class="text-danger"></span>
            </div>

            <div class="material material-oak" id="material-box"></div>


        </div>

    </div>
    <div class="form-group">
        <input type="submit" value="Create Quote" class="btn btn-primary" />
    </div>
</form>


<div>
    <a class='btn btn-secondary' asp-page="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
